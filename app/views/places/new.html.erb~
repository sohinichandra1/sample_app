<h1>Edit <%= current_user.name %>'s Details</h1>

<%= form_for current_user do |f| %>

  <div class="field form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control country-dropdown" %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control country-dropdown"  %>
   </div>

  <div class="field form-group">
    <%= f.label :street_address %><br />
    <%= f.text_field :street_address, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to "Delete", user_path(current_user), method: :delete,
    "data-confirm" => "Are you sure to delete?", class: "btn btn-primary" %>
  </div>
<% end %>
