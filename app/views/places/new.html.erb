<h2>Add Place to Share</h2>

<%= form_for @place, url: user_places_path(@user) do |f| %>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control country-dropdown" %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control country-dropdown"  %>
   </div>

  <div class="field form-group">
    <%= f.label :street_address %><br />
    <%= f.text_field :street_address, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
